<form class="{{cssClass}} lancer-sheet" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header card clipped-bot">
    <div class="header-fields">
      <h1 class="charname"><input class="header-field" name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </div>
    {{{ ref-portrait-img item.img "img" mm.ent }}}
  </header>
  
  {{{textarea-card "DESCRIPTION" "mm.ent.Description"}}}
  
  </div>
  <div class="flexcol" style="margin: 10px;">
    <div class="lancer-title">
      <span class="major">BASE FEATURES</span>
    </div>

    {{#each mm.ent.BaseFeatures as |feature feature_index|}}
        {{{ref-mm-controllable-item-native (concat "mm.ent.BaseFeatures." feature_index) "splice" }}}
    {{/each}}
    {{{ref-mm-list-item-append "mm.ent.BaseFeatures" "npc_feature"}}}
  </div>

  <div class="flexcol" style="margin: 10px;">
    <div class="lancer-title">
      <span class="major">OPTIONAL FEATURES</span>
    </div>

    {{#each mm.ent.OptionalFeatures as |feature feature_index|}}
        {{{ref-mm-controllable-item-native (concat "mm.ent.OptionalFeatures." feature_index) "splice" }}}
    {{/each}}
    {{{ref-mm-list-item-append "mm.ent.OptionalFeatures" "npc_feature"}}}
  </div>
</form>