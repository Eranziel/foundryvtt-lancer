<div class="card clipped-bot" style="margin: 0px;">
  <div class="lancer-header lancer-tech tech medium">
    <i class="cci cci-tech-quick i--m i--light"> </i>
    <span>TECH ATK{{#if title}} :: {{title}}{{/if}}</span>
    {{! TODO: refactor reroll button }}
    <!-- <a
      class="flow-button roll-attack lancer-button lancer-macro"
      data-macro="{{rerollMacroData}}"
      title="Reroll this attack"
    >
      <i class="fas fa-dice-d20 i--m i--light"></i>
    </a> -->
  </div>
  <div class="card clipped">
    <div class="lancer-mini-header collapse-trigger" data-collapse-id="{{_uuid}}-attacks">
      {{localize "lancer.chat-card.title.attack"}}
    </div>
    <div class="collapse" data-collapse-id="{{_uuid}}-attacks">
      {{#each attack_results as |attack key|}}
        {{{lancer-dice-roll attack.roll attack.tt "cci cci-reticule i--m"}}}
      {{/each}}
    </div>
  </div>
  {{#if hit_results}}
    <div class="card clipped">
      <div class="lancer-mini-header collapse-trigger" data-collapse-id="{{_uuid}}-hits">
        {{localize "lancer.chat-card.title.e-defense-hit"}}
      </div>
      <div class="collapse" data-collapse-id="{{_uuid}}-hits">
        {{#each hit_results as |hit key|}}
          <div class="lancer-hit">
            <div>
              <img class="lancer-hit-thumb" src="{{hit.token.img}}" />
            </div>
            <div class="lancer-hit-text">
              <span class="lancer-hit-text-name">{{hit.token.name}}</span>
              {{#if hit.crit}}
                <span class="card clipped lancer-hit-chip crit">
                  {{localize "lancer.chat-card.attack.crit" total=hit.total}}
                </span>
              {{else if hit.hit}}
                <span class="card clipped lancer-hit-chip hit">
                  {{localize "lancer.chat-card.attack.hit" total=hit.total}}
                </span>
              {{else}}
                <span class="card clipped lancer-hit-chip miss">
                  {{localize "lancer.chat-card.attack.miss" total=hit.total}}
                </span>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  {{/if}}
  {{#if self_heat_result}}
    <div class="card clipped">
      <div class="lancer-mini-header collapse-trigger" data-collapse-id="{{_uuid}}-self-heat">
        {{localize "lancer.chat-card.title.self-heat"}}
      </div>
      <div class="collapse" data-collapse-id="{{_uuid}}-self-heat">
        {{{lancer-dice-roll self_heat_result.roll self_heat_result.tt "cci cci-heat i--m damage--heat"}}}
      </div>
    </div>
  {{/if}}
  {{#if effect}}
    <div class="card clipped">
      <div class="lancer-mini-header collapse-trigger" data-collapse-id="{{_uuid}}-effect">
        {{localize "lancer.chat-card.title.effect"}}
      </div>
      <span class="effect-text collapse" data-collapse-id="{{_uuid}}-effect">{{{effect}}}</span>
    </div>
  {{/if}}
  <div class="flexrow" style="justify-content: flex-end; flex-wrap: wrap;">
    {{{tag-list "tags"}}}
  </div>
</div>