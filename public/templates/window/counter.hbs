<form class="{{cssClass}} lancer-sheet" onsubmit="event.preventDefault();">
	<div class="card clipped">
		<div class="lancer-header lancer-primary ">
			<i class="${icon} i--m i--light header-icon"> </i>
			<span class="major"><input name="name" type="text" value="{{ value.name }}"/></span>
		</div>
		<div class="flexrow">
			<label>Min: <input class="lancer-stat" type="number" name="min" value="{{ value.min }}"
					data-dtype="Number" /></label>
			<label>Value: <input class="lancer-stat" type="number" name="value" value="{{ value.value }}"
					data-dtype="Number" /></label>
			<label>Max: <input class="lancer-stat" type="number" name="max" value="{{ value.max }}"
					data-dtype="Number" /></label>
		</div>
	</div>
    {{> dialog-save-buttons}}
</form>