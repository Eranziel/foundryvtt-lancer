{
  "compilerOptions": {
    "target": "esnext",
    "experimentalDecorators": true,
    "isolatedModules": false,
    "module": "esnext",
    "sourceMap": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "@league-of-foundry-developers/foundry-vtt-types"
    ],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
